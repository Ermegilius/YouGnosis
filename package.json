{
  "name": "yougnosis",
  "version": "0.2.0",
  "private": true,
  "description": "",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:backend": "npm --workspace backend run start",
    "start:backend:dev": "npm --workspace backend run start:dev",
    "start:backend:debug": "npm --workspace backend run start:debug",
    "start:backend:prod": "npm --workspace backend run start:prod",
    "build:backend": "npm --workspace backend run build",
    "lint:backend": "npm --workspace backend run lint",
    "test:backend": "npm --workspace backend run test",
    "test:backend:watch": "npm --workspace backend run test:watch",
    "test:backend:cov": "npm --workspace backend run test:cov",
    "test:backend:e2e": "npm --workspace backend run test:e2e",
    "start:frontend": "npm --workspace frontend run dev",
    "build:frontend": "npm --workspace frontend run build",
    "lint:frontend": "npm --workspace frontend run lint",
    "preview:frontend": "npm --workspace frontend run preview",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,magenta\" \"npm run start:backend:dev\" \"npm run start:frontend\"",
    "start": "npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:all": "rm -rf node_modules && npm run clean",
    "generate:types": "npx supabase gen types typescript --project-id vlezvlibttcwbvqylzux > common/supabase.types.ts",
    "format": "prettier --write .",
    "format:frontend": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx,css,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ermegilius/YouGnosis.git"
  },
  "author": "Vladimir Beliakov (aka Ermegilius)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ermegilius/YouGnosis/issues"
  },
  "homepage": "https://github.com/Ermegilius/YouGnosis#readme",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0"
  }
}
